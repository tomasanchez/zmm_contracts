<mvc:View 
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:core="sap.ui.core" 
	xmlns:form="sap.ui.layout.form" 
	xmlns:f="sap.f" 
	controllerName="pampa.comunicacionesformales.contratos.controller.AddAriba">
	<f:DynamicPage id="page" class="sapUiNoContentPadding" showFooter="false">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>aribaTitle}"/>
				</f:heading>
				<f:snappedTitleOnMobile>
					<Title text="{i18n>aribaTitle}"/>
				</f:snappedTitleOnMobile>
				<f:breadcrumbs>
					<Breadcrumbs currentLocationText="{i18n>addAriba}">
						<Link text="{i18n>home}" press=".onNavBack"/>
						<Link text="Ariba" press=".onNavBack"/>
					</Breadcrumbs>
				</f:breadcrumbs>
				<f:expandedContent>
					<Label text="{i18n>aribaSubtitle}"/>
				</f:expandedContent>
				<f:snappedContent>
					<Label text="{i18n>aribaSubtitle}"/>
				</f:snappedContent>
				<f:actions>
					<ToolbarSpacer/>
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Header -->
		<f:header>
			<f:DynamicPageHeader pinnable="false" class="sapUiNoMarginBottom">
				<f:content></f:content>
			</f:DynamicPageHeader>
		</f:header>
		<!-- DynamicPage Content -->
		<f:content>
			<Panel >
				<form:SimpleForm id="AribaForm" editable="true" layout="ResponsiveGridLayout" title="{i18n>aribaFormTitle}" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
					<form:content>
						<Label id="categoryLabel" text="{/#Contratos/CatInterna/@sap:label}" />
						<Select id="categorySelect" ariaLabelledBy="categoryLabel" selectedKey="&quot;&quot;" forceSelection="true">
							<core:Item key="&quot;&quot;" text="{i18n>all}"/>
						</Select>
						<Label id="positionLabel" text="{/#Contratos/Planta/@sap:label}" />
						<Select id="positionSelect" ariaLabelledBy="positionLabel" selectedKey="&quot;&quot;" forceSelection="true">
							<core:Item key="&quot;&quot;" text="{i18n>all}"/>
						</Select>
						<Label id="riskLevelLabel" text="{/#Contratos/NivelRiesgo/@sap:label}" />
						<Select id="riskLevelSelect" ariaLabelledBy="riskLevelLabel" selectedKey="&quot;&quot;" forceSelection="true">
							<core:Item key="&quot;&quot;" text="{i18n>all}"/>
						</Select>
						<Label id="typologyLabel" text="{/#Contratos/TipologiaContrato/@sap:label}" />
						<Select id="typologySelect" ariaLabelledBy="typologyLabel" selectedKey="&quot;&quot;" forceSelection="true">
							<core:Item key="&quot;&quot;" text="{i18n>all}"/>
						</Select>
					</form:content>
				</form:SimpleForm>
			</Panel>
		</f:content>
		<!-- DynamicPage Footer-->
		<f:footer/>
	</f:DynamicPage>
</mvc:View>