<mvc:View 
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:core="sap.ui.core" 
	xmlns:form="sap.ui.layout.form" 
	xmlns:f="sap.f" controllerName="pampa.comunicacionesformales.contratos.controller.AddAriba">
	<f:DynamicPage id="page" class="sapUiNoContentPadding" showFooter="true" busy="{addAribaView>/busy}">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{IdAriba}"/>
				</f:heading>
				<f:snappedTitleOnMobile>
					<Title text="{IdAriba}"/>
				</f:snappedTitleOnMobile>
				<f:breadcrumbs>
					<Breadcrumbs currentLocationText="{IdAriba}">
						<Link text="{i18n>home}" press=".onNavBack"/>
						<Link text="Ariba" press=".onNavBack"/>
					</Breadcrumbs>
				</f:breadcrumbs>
				<f:expandedContent>
					<Label text="{i18n>aribaSubtitle}"/>
				</f:expandedContent>
				<f:snappedContent>
					<Label text="{i18n>aribaSubtitle}"/>
				</f:snappedContent>
				<f:actions>
					<ToolbarSpacer/>
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Header -->
		<f:header>
			<f:DynamicPageHeader pinnable="false" class="sapUiNoMarginBottom">
				<f:content></f:content>
			</f:DynamicPageHeader>
		</f:header>
		<!-- DynamicPage Content -->
		<f:content>
			<Panel expanded="true" expandable="false" class="sapUiResponsiveMargin">
				<headerToolbar>
					<OverflowToolbar style="Clear">
						<core:Icon src="sap-icon://detail-view" size="1.5em" id="uploadIcon"/>
						<Title text="{i18n>aribaPaneTitle}"/>
						<ToolbarSpacer/>
					</OverflowToolbar>
				</headerToolbar>
				<content>
					<form:SimpleForm id="AribaForm" editable="true" layout="ResponsiveGridLayout" title="{i18n>aribaFormTitle}" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
						<form:content>
							<Label id="categoryLabel" text="{i18n>categoryLabel}" />
							<Select id="categorySelect" ariaLabelledBy="categoryLabel" forceSelection="true" selectedKey="{form>/CatInterna}" items="{/CategoriaInternaSet}">
								<core:Item key="{IdCategoria}" text="{DescripcionCategoria}"/>
							</Select>
							<Label id="positionLabel" text="{i18n>positionLabel}" />
							<Select id="positionSelect" ariaLabelledBy="positionLabel" forceSelection="true" selectedKey="{form>/Posicion}" items="{/PosicionSet}">
								<core:Item key="{IdPosicion}" text="{DescripcionPosicion}"/>
							</Select>
							<Label id="riskLevelLabel" text="{i18n>riskLevelLabel}" />
							<Select id="riskLevelSelect" ariaLabelledBy="riskLevelLabel" forceSelection="true" selectedKey="{form>/NivelRiesgo}" items="{/NivelRiesgoSet}">
								<core:Item key="{IDNivelRiesgo}" text="{IDNivelRiesgo}"/>
							</Select>
							<Label id="typologyLabel" text="{i18n>typologyLabel}" />
							<Select id="typologySelect" ariaLabelledBy="typologyLabel" forceSelection="true" selectedKey="{form>/TipologiaContrato}" items="{/TipologiaContratoSet}">
								<core:Item key="{IdTipologia}" text="{DescripcionTipologia}"/>
							</Select>
						</form:content>
					</form:SimpleForm>
				</content>
			</Panel>
		</f:content>
		<!-- DynamicPage Footer-->
		<f:footer>
			<OverflowToolbar >
				<ToolbarSpacer/>
				<Button text="{i18n>accept}" press=".onAccept" type="Emphasized"/>
				<Button text="{i18n>cancel}" press=".onNavBack" type="Default"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>